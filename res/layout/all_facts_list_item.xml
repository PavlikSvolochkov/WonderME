<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:padding="8dp"
  android:background="@android:color/white"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content">

  <TextView
    android:id="@+id/factText"
    android:lines="4"
    android:text="@string/trash"
    style="@style/fact_text"
    android:layout_toLeftOf="@+id/factArrow" />

  <ImageView
    android:id="@+id/factArrow"
    style="@style/arrow_style"
    android:contentDescription="@string/desc" />

  <TextView
    android:id="@+id/factName"
    android:paddingRight="10dp"
    android:text="Name"
    style="@style/simple_text"
    android:layout_below="@id/factText" />

  <ImageView
    android:id="@+id/factStar"
    android:src="@drawable/star"
    android:layout_below="@id/factText"
    android:layout_toRightOf="@id/factName"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:contentDescription="@string/desc" />

  <TextView
    android:id="@+id/factCount"
    android:text="count"
    style="@style/simple_text"
    android:layout_below="@id/factText"
    android:layout_toRightOf="@id/factStar" />

</RelativeLayout>